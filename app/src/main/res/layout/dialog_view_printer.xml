<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <ImageView
        android:id="@+id/fragment_view_printer_image"
        android:layout_width="95dp"
        android:layout_height="97dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_printer" />

    <TextView
        android:id="@+id/fragment_view_printer_make"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_printer_model"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_printer_serial"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_printer_color"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_printer_status"
        android:layout_width="220dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_printer_owner"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_printer_dept"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_printer_location"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_printer_floor"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_printer_ip"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"/>


</LinearLayout>