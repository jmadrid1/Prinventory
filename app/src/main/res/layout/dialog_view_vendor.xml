<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/fragment_view_vendor_image"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/dashboard_vendor" />

    <ImageView
        android:id="@+id/fragment_view_vendor_message"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        app:srcCompat="@drawable/ic_message" />

    <ImageView
        android:id="@+id/fragment_view_vendor_call"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="110dp"
        app:srcCompat="@drawable/ic_phone" />

    <TextView
        android:id="@+id/fragment_view_vendor_name"
        android:layout_width="268dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="165dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_vendor_phone"
        android:layout_width="220dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="192dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_vendor_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="219dp"
        android:textSize="15sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_street"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="248dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_city"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="271dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_state"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="296dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_zipcode"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="320dp"
        android:layout_gravity="center"/>

</RelativeLayout>