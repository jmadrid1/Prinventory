<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/row_printer_icon"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"
                app:srcCompat="@drawable/ic_printer" />

            <TextView
                android:id="@+id/row_printer_make"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="8dp"
                android:text="@string/list_printer_design_make"/>

            <TextView
                android:id="@+id/row_printer_model"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="24dp"
                android:text="@string/list_printer_design_model" />

            <TextView
                android:id="@+id/row_printer_dept"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="@string/list_printer_design_dept"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="39dp" />

            <TextView
                android:id="@+id/row_printer_ip"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="55dp"
                android:text="@string/list_printer_design_ip" />

            <ImageView
                android:id="@+id/row_printer_color"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="369dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_toner_row_color" />

            <ImageView
                android:id="@+id/row_printer_status"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="422dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_status_active" />

            <ImageView
                android:id="@+id/row_printer_setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_settings" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>