<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/fragment_view_toner_image"
        android:layout_marginTop="15dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_toner" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <TextView
                android:id="@+id/fragment_view_toner_make"
                android:layout_width="220dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_view_toner_model"
                android:layout_width="220dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_view_toner_color"
                android:layout_width="220dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_view_toner_tmodel"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/fragment_view_toner_black"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/fragment_view_toner_cyan"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/fragment_view_toner_yellow"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/fragment_view_toner_magenta"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>