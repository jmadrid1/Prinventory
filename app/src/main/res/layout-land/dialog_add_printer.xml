<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/fragment_add_printer_make"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="0dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="10"
            android:hint="@string/hint_printer_make"/>

        <EditText
            android:id="@+id/fragment_add_printer_model"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="40dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="10"
            android:hint="@string/hint_printer_model"/>

        <EditText
            android:id="@+id/fragment_add_printer_serial"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="77dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="10"
            android:hint="@string/hint_printer_serial"/>

        <Spinner
            android:id="@+id/fragment_add_printer_color"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="130dp"/>

        <Spinner
            android:id="@+id/fragment_add_printer_status"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/fragment_add_printer_owner"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="140dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="10"
            android:hint="@string/hint_printer_owner"/>

        <EditText
            android:id="@+id/fragment_add_printer_dept"
            android:layout_width="245dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="180dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="15"
            android:hint="@string/hint_printer_dept"/>

        <EditText
            android:id="@+id/fragment_add_printer_location"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="220dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="15"
            android:hint="@string/hint_printer_location"/>

        <EditText
            android:id="@+id/fragment_add_printer_floor"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:inputType="textCapWords"
            android:layout_marginTop="260dp"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="12"
            android:hint="@string/hint_printer_floor"/>

        <EditText
            android:id="@+id/fragment_add_printer_ip"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginTop="300dp"
            android:maxLength="3"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi"
            android:hint="@string/hint_printer_ip"/>

    </RelativeLayout>
</ScrollView>