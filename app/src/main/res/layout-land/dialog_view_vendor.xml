<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/fragment_view_vendor_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_vendor"
        android:layout_alignBottom="@+id/fragment_view_vendor_call"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/fragment_view_vendor_message"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_message" />

    <ImageView
        android:id="@+id/fragment_view_vendor_call"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/ic_phone"
        android:layout_alignTop="@+id/fragment_view_vendor_message"
        android:layout_toEndOf="@+id/fragment_view_vendor_phone" />

    <TextView
        android:id="@+id/fragment_view_vendor_name"
        android:layout_width="268dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_vendor_phone"
        android:layout_width="220dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="88dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fragment_view_vendor_email"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="108dp"
        android:textSize="12sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_street"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="128dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_city"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="147dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_state"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="166dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fragment_view_vendor_zipcode"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="185dp"
        android:layout_gravity="center"/>

</RelativeLayout>